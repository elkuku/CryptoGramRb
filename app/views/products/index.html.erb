<h1><%= t ".title" %></h1>
<div
  data-controller="crypto"
  data-crypto-phrase-value="<%= @random_phrase %>"
  data-crypto-no-letters-value="<%= no_letters %>"
  data-action="keydown@window->crypto#handleKeyDown"
>

  <div class="alert alert-warning">Errors: <span data-crypto-target="error"></span>
  </div>

  <div class="cryptoContainer row" style="border: 1px dashed green">
    <% @random_phrase.chars.each_with_index do |l, index| %>
      <div class="col" data-crypto-target="letter"
           data-action="click->crypto#selectLetter"
           data-crypto-index-param="<%= index %>"
      >...
      </div>
    <% end %>
  </div>

  <div>
    <div data-crypto-target="success"
    class="alert alert-success text-center" style="display: none"
    >
  </div>
</div>

  <div style="border: 1px dashed blue">
    <% all_letters(@lang).each do |letter| %>
      <button data-crypto-target="key" class="btn"><%= letter %></button>
    <% end %>
  </div>
</div>

<hr>

<div class="container text-center">
  <div class="row row-cols-auto">
    <div class="col">
      <button class="btn btn-info">X</button>
      <br>{{ 'Present'|trans }}
    </div>
    <div class="col">
      <button class="btn btn-success">X</button>
      <br>{{ 'Found'|trans }}
    </div>
    <div class="col">
      <button class="btn btn-secondary">X</button>
      <br>{{ 'All found'|trans }}
    </div>
    <div class="col">
      <button class="btn btn-outline-secondary" disabled>X</button>
      <br>{{ 'Not present'|trans }}
    </div>
  </div>
</div>

<br>

